.header {
  display: flex;
  justify-content: center;
  border-bottom: 1rpx solid #ccc;
}
.header text {
  padding: 20rpx 40rpx;
  color: #999;
  font-size: 34rpx;
  text-align: center;
}
.item{
  display: flex;
  padding: 10rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}
.poster{
  width: 128rpx;
  height: 168rpx;
  margin-right: 20rpx;
}
.meta{
  flex: 1;
}
.title,
.sub-title {
  display: block;
  margin-bottom: 15rpx;
  text-align: left;
}

.title {
  font-size: 32rpx;
}

.sub-title {
  font-size: 22rpx;
  color: #c0c0c0;
}

.artists {
  font-size: 24rpx;
  color: #999;
}
.rating text {
    display: inline-block;
    width: 40rpx;
    font-size: 28rpx;
    font-weight: bold;
    text-align: center;
    background-color: rgba(247, 76, 49, .8);
    color: #fff;
    padding: 10rpx;
    border-radius: 20rpx;
  }